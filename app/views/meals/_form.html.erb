<%= form_for(@meal) do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
  <br>
  <%= f.label :venue_id %>
  <%= f.collection_select :venue_id, Venue.all, :id, :name, {prompt: "Which Venue?"} %>
  <br>
  <br>

  <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
<% end %>